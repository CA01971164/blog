// tsconfig.json

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist" // コンパイルされたJavaScriptファイルの出力先ディレクトリ
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
